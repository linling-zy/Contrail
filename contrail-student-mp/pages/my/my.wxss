/* Page Background */
page {
  background-color: #F7F7F7;
}

/* Custom Navigation Bar */
.custom-nav {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  background-color: #ffffff;
  z-index: 100;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.03);
}

.nav-title {
  text-align: center;
  font-size: 34rpx;
  font-weight: 500;
  color: #000000;
  /* Line height and height handled by JS-injected inline style */
}

.page-container {
  padding: 32rpx;
  /* Padding-top handled by JS-injected inline style */
}

/* White Card Container */
.info-card {
  background-color: #FFFFFF;
  border-radius: 24rpx; /* Rounded corners */
  padding: 0 32rpx;     /* Padding horizontal only, let cells handle vertical */
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.03);
  margin-top: 32rpx;    /* Space from Nav Bar */
}

/* List Item (Cell) */
.info-cell {
  display: flex;
  justify-content: space-between;
  align-items: flex-start; /* Align to top for multi-line text */
  padding: 32rpx 0;
  min-height: 48rpx;
}

/* Field Name (Label) */
.label {
  color: #666666;
  font-size: 30rpx;
  flex-shrink: 0; /* Prevent label from shrinking */
  margin-right: 32rpx;
  margin-top: 4rpx; /* Align with first line of text */
}

/* Field Content (Value) */
.value {
  color: #333333;
  font-size: 30rpx;
  font-weight: 500; /* Slightly bold */
  text-align: right;
  flex: 1; /* Take remaining space */
  
  /* Multi-line support */
  white-space: normal;
  word-break: break-all;
  line-height: 1.4;
}

/* Multi-line Value Container */
.value-column {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: flex-end;
}

.value-item {
  color: #333333;
  font-size: 30rpx;
  font-weight: 500;
  margin-bottom: 8rpx;
  text-align: right;
}
.value-item:last-child {
  margin-bottom: 0;
}

/* Separator Line */
.divider {
  height: 2rpx;
  background-color: #F0F0F0;
  width: 100%;
}

/* Loading State */
.loading-state {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 120rpx 32rpx;
  min-height: 60vh;
}

.loading-text {
  font-size: 28rpx;
  color: #999999;
}