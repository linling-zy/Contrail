/** index.wxss **/
page {
  height: 100vh;
  display: flex;
  flex-direction: column;
  /* Soft flowing gradient background */
  background: linear-gradient(135deg, #fdfbfb 0%, #ebedee 100%);
  font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', Helvetica, role="presentation", Arial, sans-serif;
  overflow: hidden; /* Prevent blob overflow scroll */
  position: relative;
}

/* --- Immersive Background Removed to fix rendering issues --- */

/* --- Main Layout --- */
.scrollarea {
  flex: 1;
  width: 100%;
  position: relative;
  z-index: 10; /* Above background */
}

.container {
  display: flex;
  flex-direction: column;
  width: 100%;
  box-sizing: border-box;
  padding: 0 40rpx; /* Increased side padding */
  gap: 30rpx; /* Increased vertical spacing */
}

/* --- Glass Card Component --- */
.glass-card {
  background: rgba(255, 255, 255, 0.9); /* High opacity for fallback */
  /* backdrop-filter: blur(20px);  Removed for compatibility */
  /* -webkit-backdrop-filter: blur(20px); */
  border: 1px solid rgba(255, 255, 255, 0.8);
  border-radius: 32rpx; /* Smooth large corners */
  box-shadow: 0 8rpx 32rpx 0 rgba(31, 38, 135, 0.07);
  padding: 40rpx;
  box-sizing: border-box;
  width: 100%;
}

/* --- 1. Hero Section --- */
.hero-section {
  display: flex;
  justify-content: space-between;
  align-items: center;
  min-height: 240rpx;
}

.hero-left {
  display: flex;
  flex-direction: column;
}

.hero-score {
  font-size: 100rpx; /* Massive number */
  font-weight: bold;
  color: #2c3e50; /* Solid color for compatibility */
  line-height: 1;
  margin-bottom: 20rpx;
  font-family: 'DIN Condensed', 'Helvetica Neue', sans-serif;
}

.hero-label {
  font-size: 28rpx;
  color: #7f8c8d;
  font-weight: 500;
  letter-spacing: 2rpx;
  margin-bottom: 8rpx;
  text-transform: uppercase;
}

.hero-update {
  font-size: 22rpx;
  color: #bdc3c7;
}

.hero-right {
  display: flex;
  align-items: center;
  justify-content: center;
  opacity: 0.9;
}

.trophy-icon {
  font-size: 120rpx;
  filter: drop-shadow(0 10rpx 10rpx rgba(0,0,0,0.1));
}

/* --- 2. Status Section --- */
.status-section {
  padding: 50rpx 30rpx; /* More vertical breath */
}

.stepper-container {
  display: flex;
  align-items: flex-start;
  justify-content: space-between;
}

.step-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
  flex: 1;
  z-index: 2;
}

.step-icon-wrapper {
  position: relative;
  width: 80rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(255, 255, 255, 0.5);
  border-radius: 50%;
  margin-bottom: 16rpx;
  transition: all 0.3s;
}

.step-icon {
  font-size: 40rpx;
}

.step-label {
  font-size: 24rpx;
  color: #95a5a6;
  font-weight: 500;
}

/* Status: Qualified */
.qualified .step-icon-wrapper {
  background: #e0f7fa; /* Light Cyan */
  box-shadow: 0 4rpx 12rpx rgba(76, 175, 80, 0.2);
}
.qualified .step-icon {
  /* color: #00acc1;  Emoji doesn't take color well, but wrapper does */
  filter: grayscale(0%);
}
.qualified .step-label {
  color: #00838f;
  font-weight: bold;
}

.status-badge {
  position: absolute;
  bottom: -4rpx;
  right: -4rpx;
  background: #00acc1;
  border-radius: 50%;
  padding: 4rpx;
  display: flex;
  border: 2rpx solid #fff;
}

/* Status: Pending (In Progress) */
.pending .step-icon-wrapper {
  background: #fff3e0;
  border: 2rpx solid #ffb74d;
  animation: pulse 2s infinite;
}
.pending .step-label {
  color: #fb8c00;
}

@keyframes pulse {
  0% { box-shadow: 0 0 0 0 rgba(255, 183, 77, 0.7); }
  70% { box-shadow: 0 0 0 20rpx rgba(255, 183, 77, 0); }
  100% { box-shadow: 0 0 0 0 rgba(255, 183, 77, 0); }
}

/* Status: Not Started / Unqualified */
.unqualified .step-icon-wrapper, 
.pending .step-icon-wrapper:not(.pending) { /* Fallback */
  opacity: 0.5;
  filter: grayscale(100%);
}
/* Re-enable opacity for unqualified specifically or just styling */
.unqualified .step-icon, .step-item:not(.qualified):not(.pending) .step-icon {
   filter: grayscale(100%);
   opacity: 0.4;
}


/* Connector Line */
.step-connector {
  flex: 1;
  height: 4rpx;
  background: #ecf0f1;
  margin-top: 40rpx; /* Center with icon */
  margin-left: -20rpx;
  margin-right: -20rpx;
  transform: translateY(-50%);
  z-index: 1;
}

/* --- 3. Comments Section --- */
.comment-section {
  position: relative;
  min-height: 200rpx;
  padding: 50rpx;
}

.quote-mark {
  position: absolute;
  top: 10rpx;
  left: 20rpx;
  font-size: 100rpx;
  font-family: 'Times New Roman', serif;
  color: #2c3e50;
  opacity: 0.1;
  line-height: 1;
}

.comment-content {
  position: relative;
  z-index: 2;
}

.comment-text {
  font-size: 30rpx;
  color: #2c3e50;
  line-height: 1.8;
  text-align: justify;
  font-weight: 300;
}
