page {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background-color: #f7f8fa;
}

.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
  box-sizing: border-box;
}

/* Score Section */
.score-section {
  margin-top: 0;
  margin-bottom: 20rpx; /* Reduced from 40rpx */
}

.score-circle {
  width: 220rpx; /* Reduced from 280rpx */
  height: 220rpx; /* Reduced from 280rpx */
  border-radius: 50%;
  border: 12rpx solid #0056b3; /* Reduced border width slightly */
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background-color: #ffffff;
  box-shadow: 0 8rpx 20rpx rgba(0, 0, 0, 0.1);
  cursor: pointer;
}

.score-num {
  font-size: 80rpx; /* Reduced from 96rpx */
  font-weight: bold;
  color: #0056b3;
  line-height: 1;
}

.score-label {
  font-size: 24rpx; /* Reduced from 28rpx */
  color: #666;
  margin-top: 8rpx;
}

/* Status Section */
.status-section {
  width: 90%;
  background-color: #ffffff;
  border-radius: 12px;
  padding: 24rpx; /* Reduced from 40rpx */
  /* Ensure spacing from element above */
  margin-top: 10rpx; 
  margin-bottom: 20rpx; /* Reduced from 40rpx */
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
  /* Prevent overlap issues */
  position: relative; 
  z-index: 1;
}

.status-grid {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  gap: 20rpx; /* Reduced gap */
}

.status-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 45%; 
  margin-bottom: 10rpx;
}

.status-icon {
  width: 80rpx; /* Reduced from 100rpx */
  height: 80rpx; /* Reduced from 100rpx */
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 12rpx;
}

.status-icon .dots {
  font-size: 40rpx; /* Reduced */
  line-height: 1;
  color: #ccc;
  font-weight: bold;
  padding-bottom: 10rpx; 
}

/* Status Colors */
.status-icon.pending {
  border: 4rpx solid #ccc;
  color: #ccc;
}

.status-icon.qualified {
  background-color: #e8f5e9;
  border: 4rpx solid #4caf50;
  color: #4caf50;
}

.status-icon.unqualified {
  background-color: #ffebee;
  border: 4rpx solid #f44336;
  color: #f44336;
}

.status-name {
  font-size: 28rpx; /* Reduced from 32rpx */
  font-weight: 500;
  color: #333;
}

.status-label {
  font-size: 24rpx;
  color: #999;
}

/* Comment Section */
.comment-section {
  width: 90%;
  background-color: #ffffff;
  border-radius: 12px;
  padding: 24rpx; /* Reduced from 40rpx */
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
}

.section-title {
  font-size: 32rpx; /* Reduced from 36rpx */
  font-weight: bold;
  color: #333;
  margin-bottom: 16rpx;
}

.comment-content {
  display: -webkit-box; /* Re-enabled for truncation */
  -webkit-line-clamp: 3; /* Re-enabled for truncation */
  -webkit-box-orient: vertical; /* Re-enabled for truncation */
  white-space: normal;
  overflow: hidden;
  text-overflow: ellipsis;
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
}

.comment-hint {
  margin-top: 16rpx;
  font-size: 24rpx;
  color: #0056b3;
  text-align: right;
}

.scrollarea {
  flex: 1;
  overflow-y: auto;
  width: 100%;
  box-sizing: border-box;
}

