/* Page Background */
page {
  /* Minimalist Background: Pale Grey/White */
  background: #f5f7f9;
  font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', Helvetica, role="presentation", Arial, sans-serif;
  height: 100vh;
  overflow: hidden;
  position: relative;
}

/* --- Immersive Background Removed to fix "black mask" issue --- */

/* Custom Navigation Bar */
.custom-nav {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  z-index: 100;
  background: rgba(255, 255, 255, 0.98); /* High opacity */
  border-bottom: 1px solid rgba(0,0,0,0.03);
}

.nav-title {
  text-align: center;
  font-size: 32rpx;
  font-weight: 600;
  color: #1a1a1a;
  letter-spacing: 0.5px;
}


/* Scroll View */
.content-scroll {
  width: 100%;
  box-sizing: border-box;
  position: relative;
  z-index: 10;
}

/* --- Header Section: Bento Grid --- */
.header-section {
  padding: 20rpx 40rpx 10rpx;
}

.bento-grid {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.bento-card {
  position: relative;
  height: 160rpx;
  /* background & box-shadow handled inline */
  border: 1px solid rgba(255, 255, 255, 0.3); /* Subtle white border for glass effect */
  border-radius: 24rpx;
  overflow: hidden;
  transition: transform 0.1s ease, box-shadow 0.2s ease;
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
  padding: 24rpx;
  box-sizing: border-box;
}

.bento-card:active {
  transform: scale(0.98);
}

/* Top Row: 3 items */
.card-small {
  /* Subtracting slightly more (42rpx instead of 40rpx) to prevent sub-pixel wrapping */
  width: calc((100% - 42rpx) / 3);
}

/* Bottom Row: 2 items */
.card-medium {
  /* Subtracting slightly more (22rpx instead of 20rpx) to prevent sub-pixel wrapping */
  width: calc((100% - 22rpx) / 2);
}

.card-watermark {
  position: absolute;
  top: -6rpx;
  right: -6rpx;
  font-size: 36rpx;
  font-weight: 800;
  color: #fff;
  opacity: 0.3; /* Increased opacity for colored background */
  font-family: 'DIN Condensed', sans-serif;
  letter-spacing: 1px;
  pointer-events: none;
  z-index: 1;
}

.card-content {
  position: relative;
  z-index: 2;
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
}

.card-name {
  font-size: 26rpx;
  font-weight: 700;
  color: #fff; /* White text for contrast on gradients */
  line-height: 1.2;
  text-shadow: 0 2rpx 4rpx rgba(0,0,0,0.1);
}

.card-arrow {
  font-size: 24rpx;
  color: #fff;
  opacity: 0.8;
  transform: rotate(-45deg); /* Pointing up-right */
  font-weight: 300;
}


/* --- List Section --- */
.list-section {
  background: #fff;
  border-radius: 40rpx 40rpx 0 0; /* Sheet-like appearance */
  min-height: 60vh;
  padding: 40rpx;
  margin-top: 30rpx;
  box-shadow: 0 -4rpx 30rpx rgba(0,0,0,0.02);
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #2c3e50;
}

/* Inline Filter */
.inline-filter {
  display: flex;
  gap: 16rpx;
}

.filter-chip {
  font-size: 24rpx;
  padding: 8rpx 20rpx;
  border-radius: 20rpx;
  color: #95a5a6;
  background: #f7f9fa;
  transition: all 0.2s;
}

.filter-chip.active {
  background: #0062E6; /* Deep brand blue */
  color: #fff;
  box-shadow: 0 4rpx 10rpx rgba(0, 98, 230, 0.2);
}


/* --- List Items (Clean Style) --- */
.cert-list {
  /* removed padding, using list-section padding */
}

.list-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx 0;
  border-bottom: 1px solid #f0f2f5;
}

.list-item:last-child {
  border-bottom: none;
}

.item-left {
  display: flex;
  align-items: center;
  flex: 1;
}

.item-icon-box {
  width: 80rpx;
  height: 80rpx;
  border-radius: 16rpx;
  background: #f7f9fa;
  margin-right: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #bdc3c7;
  font-weight: 600;
  font-size: 32rpx;
  overflow: hidden;
}

.item-thumb {
    width: 100%;
    height: 100%;
}

.item-info {
  display: flex;
  flex-direction: column;
}

.item-title {
  font-size: 30rpx;
  color: #2c3e50;
  font-weight: 500;
  margin-bottom: 8rpx;
}

.item-meta {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.item-date {
  font-size: 22rpx;
  color: #bdc3c7;
}

.item-tag {
    font-size: 20rpx;
    background: #f0f2f5;
    color: #95a5a6;
    padding: 2rpx 8rpx;
    border-radius: 4rpx;
}

.item-status {
  font-size: 24rpx;
  font-weight: 500;
  padding: 6rpx 16rpx;
  border-radius: 12rpx;
}

.status-passed {
  color: #27ae60;
  background: rgba(39, 174, 96, 0.08);
}

.status-rejected {
  color: #e74c3c;
  background: rgba(231, 76, 60, 0.08);
}

.status-auditing {
  color: #f39c12;
  background: rgba(243, 156, 18, 0.08);
}


/* Empty State */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding-top: 100rpx;
}

.empty-img {
  width: 200rpx;
  opacity: 0.5;
  margin-bottom: 20rpx;
}

.empty-text {
  font-size: 26rpx;
  color: #bdc3c7;
}

.list-spacer {
  height: 100rpx;
}
