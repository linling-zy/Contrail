/* Page Layout */
page {
  background-color: #f5f7fa;
  box-sizing: border-box;
  padding-bottom: calc(140rpx + env(safe-area-inset-bottom)); /* Add extra padding for scroll */
}

/* 1. Custom Navigation Bar (Fixed & Safe Area) */
.custom-nav {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  background-color: #ffffff;
  z-index: 500;
  /* Height and Padding set via JS style */
}

.nav-content {
  position: relative;
  width: 100%;
  height: 100%; /* Fill the container set by JS */
  display: flex;
  justify-content: center;
  align-items: center;
}

.back-btn {
  position: absolute;
  left: 32rpx;
  height: 100%;
  display: flex;
  align-items: center;
  padding-right: 40rpx; /* Hit Area */
}

.back-icon {
  font-size: 36rpx;
  color: #333;
  font-weight: bold;
}

.nav-title {
  font-size: 34rpx;
  font-weight: 500;
  color: #000000;
}

/* 2. Main Container (Below Nav) */
.container {
  height: 100vh;
  position: relative;
  padding: 32rpx;
  display: flex;
  flex-direction: column;
}


.alert-placeholder {
  position: relative;
  height: 76rpx;
  margin-top: 24rpx;
  margin-bottom: 0;
  width: 100%;
  flex-shrink: 0;
}

.alert-box {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  background-color: #ffebee;
  border-radius: 12rpx;
  padding: 20rpx 24rpx;
  display: flex;
  align-items: flex-start;
  z-index: 10;
  min-height: 56rpx; /* Ensure minimum height for content */
}

.alert-text {  
  font-size: 26rpx;
  color: #d32f2f;
  margin-left: 16rpx;
  flex: 1;
  line-height: 1.4;
  text-align: center;
}

/* 4. White Card Container */
.content-card {
  background-color: #ffffff;
  border-radius: 32rpx; /* Rounded 16px */
  padding: 40rpx 32rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.02);
  margin: auto 0;
  width: 90%;
  height: 60%;
}

/* Row 1: Certificate Name */
.form-item-row {
  display: flex;
  align-items: center;
  padding: 16rpx 0;
}

.row-label {
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
  width: 160rpx;
}

.row-value {
  flex: 1;
  font-size: 30rpx;
  color: #333;
  text-align: right;
  padding-right: 16rpx;
}

.row-value.placeholder {
  color: #ccc;
}

.row-arrow {
  color: #ccc;
  font-family: monospace;
  font-size: 30rpx;
}

/* Divider */
.divider {
  height: 2rpx;
  background-color: #f5f5f5;
  margin: 32rpx 0;
}

/* Row 2: Upload Area */
.upload-area-wrapper {
  display: flex;
  flex-direction: column;
}

.area-label {
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 24rpx;
}

.upload-box {
  width: 100%;
  height: 360rpx;
  background-color: #ffffff;
  border-radius: 16rpx;
  overflow: hidden;
}

.upload-dashed {
  width: 100%;
  height: 100%;
  border: 4rpx dashed #d9d9d9; /* Dashed Border */
  border-radius: 16rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background-color: #fafafa;
  box-sizing: border-box;
}

.camera-icon {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 24rpx;
  opacity: 0.4;
}

.upload-hint {
  font-size: 26rpx;
  color: #999;
}

/* Preview */
.preview-box {
  position: relative;
  width: 100%;
  height: 360rpx;
  border-radius: 16rpx;
  overflow: hidden;
  background-color: #000;
}

.preview-img {
  width: 100%;
  height: 100%;
}

.remove-btn {
  position: absolute;
  top: 16rpx;
  right: 16rpx;
  background-color: rgba(255, 255, 255, 0.9);
  border-radius: 50%;
  width: 56rpx;
  height: 56rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.1);
}

.warning-text {
  font-size: 24rpx;
  color: #ff9800; /* Orange hint */
  margin-top: 16rpx;
  display: block;
  text-align: center;
}

/* Footer Button (Fixed Bottom) */
.footer-btn-area {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  background-color: #ffffff;
  padding: 24rpx 32rpx;
  box-sizing: border-box;
  box-shadow: 0 -4rpx 16rpx rgba(0,0,0,0.03);
  
  /* Safe Area for Home Indicator */
  padding-bottom: calc(24rpx + constant(safe-area-inset-bottom));
  padding-bottom: calc(24rpx + env(safe-area-inset-bottom));
  z-index: 400;
}

.submit-btn {
  background-color: #0056b3;
  color: #fff;
  font-size: 32rpx;
  font-weight: 500;
  border-radius: 48rpx;
  height: 88rpx;
  line-height: 88rpx;
  padding: 0;
  border: none;
}

.submit-btn:active {
  background-color: #004494;
}

/* Bottom Sheet */
.bottom-sheet-mask {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0,0,0,0.5);
  z-index: 1000;
  visibility: hidden;
  opacity: 0;
  transition: all 0.3s;
}

.bottom-sheet-mask.show {
  visibility: visible;
  opacity: 1;
}

.bottom-sheet {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 60vh;
  background-color: #fff;
  border-radius: 24rpx 24rpx 0 0;
  transform: translateY(100%);
  transition: transform 0.3s cubic-bezier(0.25, 1, 0.5, 1);
  display: flex;
  flex-direction: column;
}

.bottom-sheet-mask.show .bottom-sheet {
  transform: translateY(0);
}

.sheet-header {
  padding: 32rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 2rpx solid #f0f0f0;
}

.sheet-title {
  font-size: 32rpx;
  font-weight: 600;
}

.close-icon {
  font-size: 40rpx;
  color: #999;
  padding: 0 16rpx;
}

.search-bar {
  padding: 24rpx 32rpx;
  background-color: #fff;
}

.search-input {
  background-color: #f5f7fa;
  padding: 16rpx 24rpx;
  border-radius: 12rpx;
  font-size: 28rpx;
}

.sheet-list {
  flex: 1;
  overflow-y: auto;
}

.sheet-item {
  padding: 24rpx 32rpx;
  font-size: 30rpx;
  color: #333;
  border-bottom: 2rpx solid #f9f9f9;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.item-hover {
  background-color: #f5f7fa;
}

.no-result {
  text-align: center;
  color: #999;
  padding: 48rpx;
  font-size: 28rpx;
}
