page {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background-color: #f7f8fa;
}

.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
  box-sizing: border-box;
  justify-content: flex-start; /* Override app.wxss space-between */
}

.scrollarea {
  flex: 1;
  overflow-y: auto;
  width: 100%;
  box-sizing: border-box;
}

/* Score Summary */
.score-summary {
  width: 90%;
  background-color: #ffffff;
  border-radius: 12px;
  padding: 30rpx 24rpx 10rpx 24rpx;
  margin-top: 0;
  margin-bottom: 0;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
  display: flex;
  justify-content: space-around;
  align-items: center;
}

.summary-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.summary-label {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 12rpx;
}

.summary-value {
  font-size: 48rpx;
  font-weight: bold;
  color: #0056b3;
}

.summary-value.total {
  font-size: 56rpx;
  color: #0056b3;
}

/* Logs Section */
.logs-section {
  width: 90%;
  background-color: #ffffff;
  border-radius: 12px;
  padding: 24rpx;
  margin-top: 20rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 24rpx;
}

.loading-container,
.empty-container {
  text-align: center;
  padding: 60rpx 0;
  color: #999;
  font-size: 28rpx;
}

.logs-list {
  display: flex;
  flex-direction: column;
}

.log-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}



.log-left {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.log-reason {
  font-size: 30rpx;
  color: #333;
  margin-bottom: 8rpx;
}

.log-time {
  font-size: 24rpx;
  color: #999;
}

.log-right {
  margin-left: 20rpx;
}

.log-delta {
  font-size: 32rpx;
  font-weight: bold;
}

.log-delta.positive {
  color: #4caf50;
}

.log-delta.negative {
  color: #f44336;
}

