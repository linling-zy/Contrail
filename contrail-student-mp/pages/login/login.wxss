/* Pages background */
page {
  /* Immersive Background: Clear Blue Sky to Cloud White */
  background: linear-gradient(to bottom, #E0F2FF, #FFFFFF);
  height: 100%;
  display: flex;
  flex-direction: column;
  position: relative;
  overflow: hidden;
  font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', Helvetica, role="presentation", Arial, sans-serif;
}

.container {
  flex: 1;
  display: flex;
  flex-direction: column;
  padding: 0 40rpx;
  box-sizing: border-box;
  position: relative;
  z-index: 2;
}

/* Background Decoration: Sun/Cloud */
.bg-decoration.sun {
  position: absolute;
  top: -100rpx;
  right: -100rpx;
  width: 600rpx;
  height: 600rpx;
  background: radial-gradient(circle, rgba(255, 255, 255, 0.8), rgba(255, 255, 255, 0));
  border-radius: 50%;
  filter: blur(40px);
  z-index: 0;
  pointer-events: none;
}

/* Branding: Watermark */
.bg-watermark {
  position: absolute;
  top: 10%;
  left: -40rpx;
  font-size: 160rpx;
  font-weight: 900;
  color: #000000;
  opacity: 0.05;
  z-index: 0;
  pointer-events: none;
  font-style: italic;
  letter-spacing: -4rpx;
}

.content-wrapper {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  position: relative;
  z-index: 2;
  padding-bottom: 60rpx;
}

/* Header Section */
.header {
  margin-bottom: 60rpx;
  padding-left: 10rpx;
}

.title {
  font-size: 48rpx;
  font-weight: bold;
  color: #0F172A; /* Darker, cleaner text */
  margin-bottom: 12rpx;
  text-shadow: 0 2rpx 4rpx rgba(255, 255, 255, 0.8);
}

.subtitle {
  font-size: 28rpx;
  color: #007AFF; /* Tech Blue */
  letter-spacing: 2rpx;
  font-weight: 500;
  text-transform: uppercase;
}

/* Glassmorphism Card */
.glass-card {
  width: 100%;
  background: rgba(255, 255, 255, 0.9); /* High opacity for cleaner look or 0.7 for more glass */
  /* backdrop-filter: blur(20px);  Note: backdrop-filter might have limited support in some mini-program envs, mostly iOS supports it well. Fallback to solid/translucent color is handled by background */
  padding: 60rpx 40rpx;
  border-radius: 32rpx;
  box-shadow: 0 20rpx 60rpx rgba(0, 122, 255, 0.15); /* Strong diffused shadow */
  box-sizing: border-box;
}

.input-group {
  margin-bottom: 40rpx;
}

/* Modern Inputs */
.modern-input {
  width: 100%;
  height: 96rpx;
  background-color: #F5F7FA;
  border-radius: 48rpx; /* High rounding */
  padding: 0 40rpx;
  font-size: 30rpx;
  color: #333;
  box-sizing: border-box;
  transition: all 0.3s ease;
}

.modern-input:focus {
  background-color: #FFFFFF;
  box-shadow: 0 0 0 4rpx rgba(0, 122, 255, 0.2); /* Focus glow */
}

.placeholder {
  color: #A0AEC0;
}

/* Main Action Button */
.login-btn {
  background: linear-gradient(135deg, #0062E6, #33AEFF);
  color: #ffffff;
  font-size: 34rpx;
  font-weight: 600;
  height: 96rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 48rpx; /* Capsule style */
  margin-top: 60rpx;
  box-shadow: 0 10rpx 20rpx rgba(0, 98, 230, 0.3);
  letter-spacing: 2rpx;
  transition: all 0.3s ease;
  border: none; /* Reset default border */
}

.login-btn:active {
  transform: scale(0.98);
  opacity: 0.9;
  box-shadow: 0 6rpx 12rpx rgba(0, 98, 230, 0.25);
}

/* Footer Section */
.footer {
  margin-top: auto;
  padding-bottom: 40rpx;
  text-align: center;
  position: relative;
  z-index: 2;
}

.copyright {
  font-size: 24rpx;
  color: #94A3B8;
  letter-spacing: 1rpx;
}
