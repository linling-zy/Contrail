<view class="container" style="padding-top: {{statusBarHeight + navBarHeight}}px;">
  <!-- Immersive Background Elements -->
  <view class="bg-decoration sun"></view>
  <view class="bg-watermark">CONTRAIL</view>

  <view class="content-wrapper">
    <!-- Header -->
    <view class="header">
        <view class="title">航迹云 · 飞行学员管理</view>
        <view class="subtitle">Contrail Cloud Flight Academy</view>
    </view>

    <!-- Glassmorphism Card -->
    <view class="glass-card">
        <view class="input-group">
          <!-- Removed label for cleaner look, added icon placeholders if needed later, kept text for now as per modern spec usually implies icons or floating labels, adhering to spec 'Modern Inputs' -->
          <input class="modern-input" type="text" placeholder="身份证号" placeholder-class="placeholder" bindinput="onInputIdCardNo" value="{{idCardNo}}" />
        </view>
        
        <view class="input-group">
          <input class="modern-input" type="password" placeholder="密码" placeholder-class="placeholder" bindinput="onInputPassword" value="{{password}}" />
        </view>

        <button class="login-btn" bindtap="onLogin">登录</button>
    </view>
  </view>
  
  <view class="footer">
    <text class="copyright">© 2026 航迹云 Contrail Cloud</text>
  </view>
</view>
